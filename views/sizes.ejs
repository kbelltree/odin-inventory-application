<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head'); %>
  <body>
    <%- include('partials/header') %>
    <main class="container sizesContainer">
      <div class="pageHeadingFormat sizesHeadingContainer">
        <h2><%= headingTitle %></h2>
        <a
          class="btnAdd"
          href="/new-size"
          aria-label="Open the 'add a new size' form"
          title="Add a new size"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="feather feather-plus-square"
          >
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="12" y1="8" x2="12" y2="16"></line>
            <line x1="8" y1="12" x2="16" y2="12"></line>
          </svg>
        </a>
      </div>
      <ul class="sizeList">
        <% sizes.forEach(size => { %>
        <li>
          <a class="sizeListText" href="/size/<%= size.size %>"
            ><%= size.size %></a
          ><% if (size.id !== 1) { %>
          <a
            class="listBtnFormat"
            href="/size/delete/<%= size.id %>/authorize-delete"
            aria-label="Delete <%= size.size %>"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="feather feather-trash-2"
            >
              <polyline points="3 6 5 6 21 6"></polyline>
              <path
                d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"
              ></path>
              <line x1="10" y1="11" x2="10" y2="17"></line>
              <line x1="14" y1="11" x2="14" y2="17"></line>
            </svg>
          </a>
          <% } %>
        </li>
        <% }) %>
      </ul>
    </main>
    <%- include('partials/footer'); %>
    <script src="/uiEventHandlers.js"></script>
  </body>
</html>
